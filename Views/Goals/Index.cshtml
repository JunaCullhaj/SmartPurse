
@model IEnumerable<Expense_Tracker.Models.Goal>

<h2>Your Goals</h2>
<a asp-action="Create">Add New Goal</a>

<table>
    <thead>
        <tr>
            <th>Title</th>
            <th>Target Amount</th>
            <th>Target Date</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var goal in Model)
        {
            <tr>
                <td>@goal.Title</td>
                <td>@goal.TargetAmount</td>
                <td>@goal.TargetDate.ToShortDateString()</td>
                <td><a asp-action="Suggest" asp-route-id="@goal.Id">View Suggestion</a></td>
            </tr>
        }
    </tbody>
</table>
