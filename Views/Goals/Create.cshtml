
@model Expense_Tracker.Models.Goal

<h2>Create a Goal</h2>

<form asp-action="Create" method="post">
    <div>
        <label asp-for="Title"></label>
        <input asp-for="Title" />
        <span asp-validation-for="Title"></span>
    </div>
    <div>
        <label asp-for="TargetAmount"></label>
        <input asp-for="TargetAmount" />
        <span asp-validation-for="TargetAmount"></span>
    </div>
    <div>
        <label asp-for="TargetDate"></label>
        <input asp-for="TargetDate" type="date" />
        <span asp-validation-for="TargetDate"></span>
    </div>
    <button type="submit">Save</button>
</form>
