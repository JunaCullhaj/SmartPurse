
@model Expense_Tracker.Models.Goal

<h2>Goal Suggestion for: @Model.Title</h2>

<p><strong>Target Amount:</strong> @Model.TargetAmount</p>
<p><strong>Target Date:</strong> @Model.TargetDate.ToShortDateString()</p>
<p><strong>Suggested monthly saving:</strong> @ViewBag.Suggestion</p>
<p><strong>Current monthly balance:</strong> @ViewBag.NetAvailable</p>

<a asp-action="Index">Back to Goals</a>
