@model Expense_Tracker.ViewModels.RegisterViewModel

@{
    ViewData["Title"] = "Register";
}

<div class="d-flex align-items-center justify-content-center vh-100">
    <div class="card p-5" style="max-width: 500px; width: 100%; background-color: #212b36; border-radius: 10px;">
        <h2 class="text-center mb-4" style="color: #fff;">Create Account</h2>

        <form asp-action="Register" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger small"></div>

            <div class="form-group mb-3">
                <input asp-for="FirstName" class="form-control bg-dark text-white border-secondary" placeholder="First Name" />
                <span asp-validation-for="FirstName" class="text-danger small"></span>
            </div>

            <div class="form-group mb-3">
                <input asp-for="LastName" class="form-control bg-dark text-white border-secondary" placeholder="Last Name" />
                <span asp-validation-for="LastName" class="text-danger small"></span>
            </div>

            <div class="form-group mb-3">
                <input asp-for="UserName" class="form-control bg-dark text-white border-secondary" placeholder="Username" />
                <span asp-validation-for="UserName" class="text-danger small"></span>
            </div>

            <div class="form-group mb-3">
                <input asp-for="Email" class="form-control bg-dark text-white border-secondary" placeholder="Email" />
                <span asp-validation-for="Email" class="text-danger small"></span>
            </div>

            <div class="form-group mb-3">
                <input asp-for="PhoneNumber" class="form-control bg-dark text-white border-secondary" placeholder="Phone Number" />
                <span asp-validation-for="PhoneNumber" class="text-danger small"></span>
            </div>

            <div class="form-group mb-3">
                <input asp-for="Password" class="form-control bg-dark text-white border-secondary" placeholder="Password" type="password" />
                <span asp-validation-for="Password" class="text-danger small"></span>
            </div>

            <div class="form-group mb-3">
                <input asp-for="ConfirmPassword" class="form-control bg-dark text-white border-secondary" placeholder="Confirm Password" type="password" />
                <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
            </div>

            <div class="d-grid">
                <button type="submit" class="btn btn-success btn-lg" style="border-radius: 8px;">Register</button>
            </div>

            <div class="text-center mt-3">
                <small class="text-white">
                    Already have an account?
                    <a asp-action="Login" asp-controller="Account" class="text-info text-decoration-none">Login here</a>
                </small>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
