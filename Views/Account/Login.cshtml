@model Expense_Tracker.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<div class="d-flex align-items-center justify-content-center vh-100">
    <div class="card p-5" style="max-width: 450px; width: 100%; background-color: #212b36; border-radius: 10px;">
        <h2 class="text-center mb-4" style="color: #fff;">Login</h2>

        @if (ViewData.ModelState != null && ViewData.ModelState.ErrorCount > 0)

        {
            <div class="alert alert-danger">
                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))

                {
                    <div>@error.ErrorMessage</div>
                }
            </div>
        }

        <form asp-action="Login" method="post">
            <input type="hidden" name="returnUrl" value="@ViewData["ReturnUrl"]" />

            <div class="form-group mb-3">
                <input asp-for="Email" class="form-control bg-dark text-white border-secondary" placeholder="Email" />
                <span asp-validation-for="Email" class="text-danger small"></span>
            </div>

            <div class="form-group mb-3">
                <input asp-for="Password" class="form-control bg-dark text-white border-secondary" type="password" placeholder="Password" />
                <span asp-validation-for="Password" class="text-danger small"></span>
            </div>

            <div class="form-check mb-3">
                <input asp-for="RememberMe" class="form-check-input" />
                <label class="form-check-label text-light" asp-for="RememberMe">Remember me?</label>
            </div>

            <div class="d-grid">
                <button type="submit" class="btn btn-success btn-lg" style="border-radius: 8px;">Login</button>
            </div>

            <div class="text-center mt-3">
                <small class="text-white">
                    Don't have an account?
                    <a asp-action="Register" asp-controller="Account" class="text-info text-decoration-none">Register here</a>
                </small>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
